{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@layouts/*": [
        "components/layouts/*"
      ],
      "@types": [
        "types"
      ],
      "@hooks": [
        "hooks"
      ],
      "@context/*": [
        "context/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@services/*": [
        "lib/services/*"
      ],
      "@resources": [
        "lib/resources"
      ],
      "@errors": [
        "lib/errors"
      ],
      "@models": [
        "lib/models"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
